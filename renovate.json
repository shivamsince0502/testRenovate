{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  
  "baseBranches": ["main"],
  "ignoreTests": true,
  "prHourlyLimit": 0,
  "schedule": ["at any time"],

  "packageRules": [
    {
      "groupName": "Major Updates",
      "updateTypes": ["major"],
      "titlePrefix": "major/",
      "automergeType": "pr",
      "semanticCommits": "disabled",
      "commitMessageTopic": "major"
    },
    {
      "groupName": "Non-Major Updates",
      "updateTypes": ["minor", "patch"],
      "titlePrefix": "non-major/",
      "automergeType": "pr",
      "semanticCommits": "disabled"
    }
  ],

  "platform": "github",
  "logFileLevel": "info"
}
